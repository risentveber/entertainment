<div class ='container' id = 'main-container'>
<div class = 'row'>

  <%= render  "partials/list_subject"%>

  <div class = 'col-lg-7 col-md-7 col-xs-7' id = 'central-part'>
    <div class = 'row'>
      <div class = 'col-lg-12 col-md-12 col-xs-12'>
        <div class = 'title-sp' id = 'class-name-school'>
          Фотоальбомы
        </div>
      </div>
    </div>

    <div class = 'row' id = 'all-albums'>
      <% @albums.each do |a| %>
      <div class="col-sm-6 col-md-4">
        <%= link_to classroom_album_path(@classroom, a) do %>
        <div class="thumbnail wrap-album" style = 'padding: 0px;'>
          <% if a.last_photo %>
            <img src="<%= a.last_photo.image.url %>" class = 'cover-photos-img'>
          <% else %>
            <img src="/empty.png" class = 'cover-photos-img'>
          <% end %>
          <div class="caption">
            <div class = 'description-album'>
              <p><%= a.name %></p>
              <%= link_to 'Добавить фото', newphoto_classroom_album_path(@classroom, a) %>
            </div>
            <div>
              <span class = 'date-create-album'>
                <%= a.created_at.strftime("%d %b %H:%M") %>
              </span>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
      <%= link_to "Новый альбом", new_classroom_album_path , class: 'btn btn-default'%>
    </div>

  </div>

  <%= render "partials/right_part_page" %>

</div>
</div>

