<div class ='container' id = 'main-container'>
<div class = 'row'>
  <%= render "/partials/squares_menu" %>
  <div class = 'main-wall' id = 'central-part'>
    <div class = 'row'>
      <div class = 'col-lg-12 col-md-12 col-xs-12'>
        <div class = 'title-sp' id = 'class-name-school'>
          Фотоальбомы
        </div>
      </div>
    </div>

    <div class = 'row'>
      <% @albums.each do |a| %>
      <div class="col-xs-4">
        <%= link_to classroom_album_path(@classroom, a), class: 'a_without_textdecoration' do %>
        <div class="card-sp" style = 'padding: 0px;'>
          <% if a.last_photo %>
            <div style = 'background: url("<%= a.last_photo.image.url %>"); background-size: cover; height: 234px;'>
          </div>
          <% else %>
            <div style = 'background: url("/empty.png"); background-size: cover; height: 234px;'>
          </div>
          <% end %>
          <div class="caption">
            <div class="card-sp-under-photo">
                <span><%= a.name %></span>
            </div>
            <div class="menu-of-form-send-comment-of-news album-data-created">
              <span class="date-news"><%= a.created_at.strftime("%d %b %H:%M") %></span>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
      
    </div>

  </div>

  <div class = "col-lg-2 col-md-2 col-xs-2 right-functional">
    <%= link_to "Новый альбом", new_classroom_album_path , class: 'btn btn-default'%>
  </div>


</div>
</div>

