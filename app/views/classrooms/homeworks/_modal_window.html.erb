<div class="modal fade" id="modal_window" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data='create'>
    <div class="modal-dialog my-setting-modal-dialog">
      <div class="modal-content my-setting-modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Сообщите о домашнем задании</h4>
        </div>
        <div class = "modal-body my-setting-modal-body">
            <div class = 'this-homework'>
              <div class = 'container-fluid'>
                <div class = 'row'>
                  <div class = 'col-lg-8 col-md-8 col-xs-8 message-this-post' style = 'padding-top: 0px;'>
                    <div class = 'row'>
                      <div class = 'col-xs-12'>
                        <div class = 'margin-b40'>
                            <select class="js-basic-multiple choice-theme-material" name="tag" multiple="multiple" style = 'width: 100%;'>
                              <option disabled>Предметная область материала</option>
                              <%= options_from_collection_for_select(Subject.all, 'id', 'name') %>
                            </select>
                        </div>
                        <div class = 'main-text-news'>
                          <%= form_tag( classroom_homeworks_path(classroom_id), id: "homework-form", original_action: classroom_homeworks_path(classroom_id)) do %>
                          <input type = 'hidden' name = 'attached_files'>
                          <input type = "hidden" name = "_method" value="post">
                          <input type = 'hidden' name = 'tag'>
                          <textarea class="form-control span-main-text-news description-add-material my-setting-form-control" rows="3" name="description" placeholder = 'Введите задание'></textarea>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class = 'col-lg-4 col-md-4 col-xs-4 files-this-post'>
                    <div class = 'margin-b40'>
                      <span class = 'title-underline'>
                        Файлы
                      </span>
                    </div>
                    <%= form_tag( attachments_path,  id: 'homework-file-dropzone' ) do %>
                      <div class = 'drop-zone margin-b40'>
                        Для загрузки файлов, кликните или перетащите их сюда.
                      </div>
                    <% end %>
                    <div class = 'margin-b20'>
                      <div class = 'container-fluid'>
                        <div id = 'image-preview' class = 'row'>
                          <!-- &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
                          <div class = 'col-xs-12 set-of-photos1 show-X' style = 'background: url(https://pp.vk.me/c7009/v7009943/83d4/pj9E0m4tgj0.jpg); background-size: cover;'>
                              <div class = 'del-this-file'>
                                <span class = 'X18'>&times;</span>
                              </div>
                          </div>
                          -->
                        </div>
                      </div>
                    </div>
                    <div id = 'loaded-documents'>

                    </div>
                    <!-- &&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
                    <div class = 'this-material this-material-preview show-X'>
                      <div class = 'del-this-file'>
                            <span class = 'X18'>&times;</span>
                      </div>
                      <div class = 'files-image type-link'>
                      </div>
                      <div class = 'name-files'>
                        <a>Название ссылки.jpg</a>
                      </div>
                    </div>
                    -->
                  </div>
                </div>
                <div class = 'row'>
                  <div class = 'col-lg-12 col-md-12 col-xs-12'>
                    <div class = 'card-date'>
                          <span class = 'date-news'><%= Time.now.strftime("%d %b %H:%M") %> • <span><%= current_user.name %></span></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <%= link_to "Удалить","", class: "btn btn-default btn-st-red del-post-modal-window",
          type: "button", remote: true, method: :delete, id: "remove_homework", "data-dismiss"=>"modal"%>
          <button type="button" class="btn btn-default btn-st-inert" data-dismiss="modal">Закрыть</button>
          <button id="send-homework" type="button" class="btn btn-primary btn-st" data-dismiss="modal">Сообщить</button>
        </div>
      </div>
    </div>
  </div>
