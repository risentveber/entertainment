<div class ='container' id = 'main-container'>
  <%= render "left_branch" %>
  <%= render "/partials/profile" %>
  <div class = 'main-wall' id = 'central-part'>
    <div class = 'submenu'>
        <%= render "menu" %>
    </div>
    <div class = 'row'>
      <div class = 'col-lg-12 col-md-12 col-xs-12'>
        <div class = 'card-sp'>
          <div class = 'title-background'>
            <div class = 'title-page'>
              Новости
            </div>
          </div>
          <div id = 'each-news'>
            <%= react_component("NewsBox", {url: "/news", pollInterval: 2000,
              username: current_user.name, userAvatar: current_user.avatar_safe_url,
              token: form_authenticity_token}) %>
          </div>
        </div>

          <%# if current_user && current_user.can_view?(@classroom) %>
          <%#= render "classrooms/news"%>
          <%# else %>
          <!-- </br>
          <div class="alert alert-warning">
            Пожалуйста станьте учеником или
            учителем класса или
            зарегестрируйтесь
          </div> -->
          <%# end %>

      </div>
    </div>
  </div>
</div>

