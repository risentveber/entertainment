<div id='homework<%= homework.id %>'class = 'card-sp sharp-wrap'>
  <div class = 'this-homework'>
    <div class = 'container-fluid'>
      <div class = 'row'>
        <div class = 'col-lg-8 col-md-8 col-xs-8 message-this-post' style = 'padding-top: 0px;'>
          <div class = 'row'>
            <div class = 'col-xs-12'>
              <div class = 'margin-b40'>
                  <span class = 'title-underline' style = 'border-bottom: 3px solid rgb(232, 146, 13); color: rgb(232, 146, 13);'>
                    <%= homework.subject.name if homework.subject %>
                  </span>
              </div>
              <div class = 'main-text-news'>
                <span class = 'span-main-text-news'>
                  <%= homework.description %>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class = 'col-lg-4 col-md-4 col-xs-4 files-this-post'>

          <% homework.attachments.each do |f| %>
            <div class = 'this-material'>
              <div class = 'files-image type-link'>
              </div>
              <div class = 'name-files'>
                <%= link_to truncate(f.file.file.filename, length: 20), f.file.url %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class = 'row'>
        <div class = 'col-lg-12 col-md-12 col-xs-12'>
          <div class = 'card-date'>
                <span class = 'date-news'><%= homework.created_at.strftime("%d %b %H:%M") %> • <span><%= homework.user.name %></span></span>
                <span class="glyphicon glyphicon-pencil pencil-news update-HW margin-l40" data-toggle="modal" data-target="#modal_window"
                data='<%= classroom_homework_path(classroom_id, homework, format: :json) %>'> Редактировать</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
