<!DOCTYPE html>
<html>
<head>
  <title>Studpad</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/css/select2.min.css" rel="stylesheet" />
	<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/js/select2.min.js"></script>
  <link href="http://allfont.ru/css/?fonts=open-sans" rel="stylesheet" type="text/css" />
  <link href="http://allfont.ru/css/?fonts=pt-sans" rel="stylesheet" type="text/css" />

  <%= csrf_meta_tags %>
</head>
<body>
  <div id = 'hat-studpad'>
    <div class = 'container-fluid'>
      <div class = 'row'>
          <div class = 'col-lg-2 col-md-2 col-xs-2' id = 'hat-studpad-title'>
            <a id = 'hat-main-studpad' href="/">Studpad</a>
          </div>
          <div id = 'menu-on-hat'>
            <div class = 'col-lg-1 col-md-1 col-xs-1'>
              <%= link_to profile_path do %>
              <%= image_tag "http://localhost:3000/uploads/teacher/avatar/1/thumb_7_______.jpg", style: 'border: 1px solid #BBC3C7; border-radius: 200px; margin-top: 6px;', size: "35x35" %>
              <% end %>
            </div>
            <div class = 'col-lg-2 col-md-2 col-xs-2 item-of-hat-menu'>
              <% if current_user && current_user.student? %>
                <%= link_to classroom_path(current_user.classroom) do %>
                  <%= image_tag "myclass.png", style: 'margin-top: 6px;', size: "35x35" %><span class = 'name-action-of-hat-menu'> Мой класс</span>
                <% end %>
              <% end %>
            </div>
          </div>
         </div>
      </div>
    </div>

<%= yield %>

</body>
</html>
