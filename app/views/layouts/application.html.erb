<!DOCTYPE html>
<html>
<head>
  <title>Studpad</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/css/select2.min.css" rel="stylesheet" />
	<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0-rc.2/js/select2.min.js"></script>
  <link href="http://allfont.ru/css/?fonts=open-sans" rel="stylesheet" type="text/css" />
  <link href="http://allfont.ru/css/?fonts=pt-sans" rel="stylesheet" type="text/css" />

  <%= csrf_meta_tags %>
</head>
<body>

  <div id = 'hat-studpad'>
    <div class = 'container-fluid'>
      <div class = 'row'>
          <div class = 'col-lg-2 col-md-2 col-xs-2' id = 'hat-studpad-title'>
            <a id = 'hat-main-studpad' href="/">Studpad</a>
          </div>
          <div class = 'col-lg-2 col-md-2 col-xs-2 item-of-base-menu'>
            <%= link_to profile_path do %>
            <span class="glyphicon glyphicon-user"></span> Мой профиль
            <% end %>
          </div>
          <div class = 'col-lg-2 col-md-2 col-xs-2 item-of-base-menu'>
            <% if current_user && current_user.student? %>
              <%= link_to classroom_path(current_user.classroom) do %>
              <span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-user"></span> Мой класс
              <% end %>
            <% end %>
          </div>
         </div>
      </div>
    </div>
  </div>

<%= yield %>

</body>
</html>
