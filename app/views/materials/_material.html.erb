<div id='material<%= material.id %>' class = 'card-sp sharp-wrap useful-material_post'>
  <% main_image = material.main_image %>
  <% if main_image %>
    <div class = 'useful-material_img'>
      <img src = '<%= main_image.file.url %>' width = '100%'/>
    </div>
  <% end %>
  <% if material.subject %>
  <div class = 'row margin-b20 margin0'>
    <div class = 'col-xs-12 align-l theme-of-UM theme-of-UM-technical'>
      <%= material.subject.name %>
    </div>
  </div>
  <% end %>
  <div class = 'useful-material_info'>
    <div class = 'container-fluid'>
      <div class = 'row'>
        <div class = 'col-lg-7 col-md-7 col-xs-7'>
          <div class = 'margin-b40'>
            <span class = 'title-underline'>
              Описание
            </span>
          </div>
          <div class = 'main-text-news'>
            <span class = 'span-main-text-news'>
              <%= material.description %>
            </span>
          </div>
        </div>
        <div class = 'col-lg-5 col-md-5 col-xs-5'>
           <div class = 'margin-b40'>
            <span class = 'title-underline'>
              Файлы
            </span>
          </div>
          <div class = 'wrap-photos margin-b20'>
            <div class = 'row'>
              <% material.images.each do |f| %>
              <div class = 'col-xs-6 set-of-photos4' style = 'background: url(
                <%= f.file.url %>
                ); background-size: cover;'>
              </div>
              <% end %>
            </div>
          </div>
          <% material.files.each do |f| %>
            <div class = 'this-material'>
              <div class = 'files-image type-document'>
              </div>
              <div class = 'name-files'>
                <%= link_to truncate(f.file.file.filename, length: 30), f.file.url %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class = 'row'>
        <div class = 'col-lg-12 col-md-12 col-xs-12'>
          <div class = 'card-date'>
                <span class = 'date-news'>

                  <%= material.created_at.strftime("%d %b %H:%M") %> •
                  <span><%= material.user.name %></span>
                </span>
                <span class = 'margin-l40 share-post'  data-toggle="modal" data-target="#modal_share">
                  <span>Поделиться &nbsp;</span>
                  <span class="glyphicon glyphicon-bullhorn"></span>
                </span>
                <span class = 'count-share'> &nbsp;&nbsp;<b>578</b></span>
                <span class="glyphicon glyphicon-pencil pencil-news update-UM margin-l40" data-toggle="modal" data-target="#modal_window"
                data='<%= material_path( material ) %>'> Редактировать</span>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
