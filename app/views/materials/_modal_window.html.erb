<div class="modal fade" id="modal_window" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data="create">
    <div class="modal-dialog my-setting-modal-dialog">
      <div class="modal-content my-setting-modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Создайте полезный материал</h4>
        </div>
        <div class = "modal-body my-setting-modal-body">
            <%= form_tag( attachments_path,  id: 'main-photo-dropzone') do %>
            <div class = 'drop-zone margin-b40'>
                      Загрузите изображение, сделайте этот материал запоминающимся и красивым.
                      </br>
                      Кликните или перетащите изображение сюда
            </div>
            <% end %>
            <div class = 'row margin-b20 margin-t10'>
              <div class = 'col-xs-3'>
              </div>
              <div class = 'col-xs-6 align-c'>
                <select class="js-basic-multiple choice-theme-material" name="tag" multiple="multiple" style = 'width: 100%;'>
                  <option disabled>Предметная область материала</option>
                  <%= options_from_collection_for_select(Subject.all, 'id', 'name') %>
                  <!-- <option>Русский язык</option>
                  <option>Литература</option>
                  <option>Математика</option>
                  <option>Химия</option> -->
                </select>
              </div>
            </div>
            <div class = 'useful-material_info_upload'>
              <div class = 'container-fluid'>
                <div class = 'row'>
                  <div class = 'col-xs-7'>
                    <div class = 'margin-b30'>
                      <span class = 'title-underline'>
                        Описание
                      </span>
                    </div>
                    <%= form_tag( materials_path, id: "material-form",
                    original_action: @new_material_action ) do %>
                    <input type = 'hidden' name = 'attached_files'>
                    <input type = 'hidden' name = 'main_image'>
                    <input type = "hidden" name = "_method" value="post">
                    <input type = 'hidden' name = 'tag'>
                    <div class = 'main-text-news'>
                      <textarea required class="form-control span-main-text-news description-add-material my-setting-form-control" name = 'description' rows="3" placeholder = 'Введите описание'></textarea>
                    </div>
                    <% end %>
                  </div>
                  <div class = 'col-xs-5'>
                    <div class = 'margin-b30'>
                      <span class = 'title-underline'>
                        Файлы
                      </span>
                    </div>
                    <%= form_tag( attachments_path,  id: 'material-dropzone' ) do %>
                      <div class = 'drop-zone margin-b40'>
                      Для загрузки файлов, кликните или перетащите их сюда.
                      </div>
                    <% end %>

                    <!-- <div class = 'wrap-video wrap-video-preview margin-b20 show-X'>
                      <div class = 'del-this-file'>
                            <span class = 'X18'>&times;</span>
                      </div>
                      <video width='100%' controls='controls'>
                        <source src="http://www.wisdomweb.ru/editor/mountvideo.mp4" type="video/mp4">
                      </video>
                    </div> -->
                    <div class = 'wrap-photos wrap-photos-preview margin-b20'>
                      <div id="loaded-photos" class = 'row'>

                        <!--
                        <div class = 'col-xs-6 set-of-photos4 show-X' style = 'background: url(https://pp.vk.me/c7009/v7009404/1bbb/PIUJ7iH_V7M.jpg); background-size: cover;'>
                          <div class = 'del-this-file'>
                            <span class = 'X18'>&times;</span>
                          </div>
                        </div>
                        -->
                      </div>
                    </div>
                    <div id="loaded-documents">
                      <!-- <div class = 'this-material this-material-preview show-X'>
                        <div class = 'del-this-file'>
                              <span class = 'X18'>&times;</span>
                        </div>
                        <div class = 'files-image type-document'>
                        </div>
                        <div class = 'name-files'>
                          <a>Название Название документа.jpg Название документа.jpg документа.jpg</a>
                        </div>
                      </div> -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class = 'useful-material_date'>
              <div class = 'container-fluid'>
                <div class = 'row'>
                  <div class = 'col-lg-12 col-md-12 col-xs-12'>
                    <div class = 'card-date'>
                          <span class = 'date-news'>
                            <%= Time.now.strftime("%d %b %H:%M") %> •
                            <span><%= current_user.name %></span>
                          </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <%= link_to "Удалить","", class: "btn btn-default btn-st-red del-post-modal-window",
          type: "button", remote: true, method: :delete, id: "remove_material", "data-dismiss"=>"modal"%>
          <!-- <button type="button" class="btn btn-default btn-st-red del-post-modal-window">Удалить</button> -->
          <button type="button" class="btn btn-default btn-st-inert" data-dismiss="modal">Закрыть</button>
          <button id = "send-material" type="button" class="btn btn-primary btn-st" data-loading-text = "Подождите..." data-dismiss="modal">Создать</button>
        </div>
      </div>
    </div>
  </div>
