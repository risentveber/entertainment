<div class = "modal-body my-setting-modal-body">
    <% if @material.main_image%>
    <div class="useful-material_img">
      <img src="<%= @material.main_image.file.url %>" width="100%">
    </div>
    <% end %>
    <div class="useful-material_info_view">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-7">
            <div class = 'useful-material_subject'>
              <% if @material.subject %><span class = 'badge badge-sp'><%= @material.subject.name %></span><% end %>
            </div>
            <div class="main-text-news">
              <span class="span-main-text-news">
                <%= @material.description %>
              </span>
            </div>
          </div>
          <div class="col-xs-5">
            <% if @material.files.any? %>
              <div class="margin-b20">
                <div class = 'preview-object autor-material'>
                  <div class = "preview-object-avatar" style="background: url(https://pp.vk.me/c627724/v627724106/b57f/aopwePxhjio.jpg) no-repeat; background-size: cover;">
                  </div>
                  <div class="preview-object-info">
                    <div class = 'object-name'><a>Это мое сообщество</a></div>
                    <div class = 'object-text'>Открытое сообщество</div>
                  </div>
                </div>
              </div>
              <% @material.files.each do |f| %>
              <div class="this-material">
                <div class="files-image type-document">
                </div>
                <div class="name-files">
                  <%= link_to truncate(f.file.file.filename, length: 20), f.file.url %>
                </div>
              </div>
              <% end %>
            <% end  %>
          </div>
        </div>
        </br>
        <div class = 'row'>
          <div class="col-xs-12">
            <% if @material.images.any? %>
            <div class="margin-b40">
              <span class="title-underline">
                Изображения
              </span>
            </div>
            <div class="wrap-photos-view-material margin-b20 align-c">
              <% @material.images.each do |i| %>
                <img src = '<%= i.file.url %>' class = 'view-material-pic'/>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="useful-material_date-view">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="card-date">
                  <span class="date-news">
                    <%= @material.created_at.strftime("%d %b %H:%M") %> •
                    <span><%=link_to @material.user.name, user_path(@material.user) %></span>
                  </span>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
