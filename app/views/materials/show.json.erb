{
  "description": "<%= html_to_json @material.description %>",
  "form_link": "<%= material_path(@material) %>",
  "html_id" : "material<%= @material.id %>",
  "main_image_id": "<%= @material.main_image.id  if @material.main_image %>",
  "attachment_ids":  "<%= @material.files_ids %>"
  <% if @material.subject_id %>
    ,"tag": <%= @material.subject_id %>
  <% end %>
  <% if @material.main_image %>
    ,"main_photo": "<%= html_to_json(render partial: "main_image", formats: :html) %>"
  <% end %>
  ,"images": [
    <% first = true %>
    <% @material.images.each do |i| %>

      <% if first %>
        <% first = false %>
      <% else %>
        ,
      <% end %>
      "<%= html_to_json(render partial: "image", object: i, formats: :html) %>"
    <% end %>
  ]
  ,"files": [
    <% first = true %>
    <% @material.files.each do |f| %>

      <% if first %>
        <% first = false %>
      <% else %>
        ,
      <% end %>
      "<%= html_to_json(render partial: "file", object: f, formats: :html) %>"
    <% end %>
  ]


}
