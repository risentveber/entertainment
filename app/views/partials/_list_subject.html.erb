<%
def classroom_id
    params[:classroom_id] || params[:id]
end
%>
<div class = 'col-lg-2 col-md-2 col-xs-2' id = 'list-subjects'>
  <div id = 'each-subjects'>
    <div class = 'title-sp' id = 'left-main-menu'>
      Меню
    </div>
    <%= link_to classroom_path(classroom_id) do %>
    <div class = 'the-subject'>
      Главная
    </div>
    <% end %>
    <%= link_to classroom_albums_path(classroom_id) do %>
    <div class = 'the-subject'>
      Фотоальбомы
    </div>
    <% end %>
  </div>
  <div id = 'each-subjects'>
    <div class = 'title-sp' id = 'left-main-menu-s'>
      Материалы
    </div>
    <div class = 'the-subject'>
      Русский язык
    </div>
    <div class = 'the-subject'>
      Математика
    </div>
    <div class = 'the-subject'>
      Физика
    </div>
  </div>
</div>
