<div class="modal fade" id = "modal-change-avatar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Изменение фотографии профиля</h4>
      </div>
      <%= form_for :classroom, url: classrooms_path do |f| %>
      <div class="modal-body">
        <div class = 'drop-zone margin-b40'>
                  Загрузите новую фотографию профиля
                  </br>
                  Кликните или перетащите изображение сюда
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary btn-st">Сохранить</button>
      </div>
      <% end %>
    </div>
  </div>
</div>