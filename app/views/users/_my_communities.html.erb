<div class = "classes-and-communities card-sp margin-t15 margin-b40">
  <div class = 'block-title'>
    Классы
    <% if @user.teacher? %>
      <button class = 'action-angle' data-toggle="modal" data-target="#modal-window-create-class" >+</button>
    <% end %>
  </div>
  <div class = "block-objects">

    <div class="preview-object-info margin-l0">
      <div class = 'object-name'>
        <% if @user.teacher? %>
          <% @user.classrooms.each do |c| %>
            <%= link_to c.name, classroom_path(c) %>
          <% end %>
        <% else %>
          <%= link_to @user.classroom.name, classroom_path(@user.classroom) if @user.classroom %>
        <% end %>
      </div>
    </div>
    </br>

  </div>
</div>
