<div class ='container' id = 'main-container'>
  <div class = 'left-branch'>
    <%= render '/partials/profile' %>
    <div class = 'profile-avatar_img' style = 'background: url(<%= @user.avatar %>) no-repeat; background-size: cover; background-color: white;'>
    </div>
  </div>

  <div class = 'main-wall'>
    <%#= render "info_user" %>
    <div class = 'panel-user'>
      <div class = 'profile-info'>
        <div class = 'action-angle'>
          <% if @user == current_user %>
          <div class = 'btn-group'>
            <span class = 'sign-dots-menu-big profile-setting' data-toggle="dropdown">•••</span>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to 'Мои настройки', profile_edit_path %>
                <%= link_to 'Выход', logout_path, data: { no_turbolink: true } %>
              </li>
            </ul>
          </div>
          <% end %>
        </div>
        <div class = 'profile-info_name'><%= @user.name %>
          <span class = 'profile-info_status'>• <%= @user.description %> </span>
        </div>
        <div class = 'profile-info_school'>
          <%= @user.school %>
        </div>
        <div class = 'profile-followers'>
          <% if @user.followers_count != 0 %>
            <div class = 'element-profile-followers'>
              <% if @user != current_user %>
                <p>Читатели</p>
              <% else %>
                <p>Меня читают</p>
              <% end %>
              <%= @user.followers_count %>
            </div>
          <% end %>
          <% if @user.follow_count != 0 %>
            <div class = 'element-profile-followers'>
              <% if @user != current_user %>
                <p>Читает</p>
              <% else %>
                <p>Я читаю</p>
              <% end %>
              <%= @user.follow_count %>
            </div>
          <% end %>
          <div class = 'element-profile-read'>
            <% if current_user && @user != current_user %>
              <% if current_user.following?(@user) %>
                <%= link_to 'Читаю', unfollow_user_path(@user),
                method: :post,
                class: 'btn btn-primary btn-st btn-follow btn-follow-on',
                data: { toggle: 'tooltip', placement: 'bottom' } %>
              <% else %>
                <%= link_to 'Читать', follow_user_path(@user),
                method: :post,
                class: 'btn btn-primary btn-st',
                data: { toggle: 'tooltip', placement: 'bottom' } %>
              <% end %>
            <!-- <button class = 'btn btn-primary btn-st'>Читать</button> -->
            <% end %>
          </div>
          <div class = 'clearboth'>
          </div>
        </div>
      </div>
    </div>
    <div class="title-background">
      <div class="title-page">
      Читатели
      </div>
    </div>
  	<div class="usual-list border-b-radius">
  		<div class = 'followers'>

  			<div class = 'follower'>
  				<div class="follower-user-button">
  					<div class='follower-user'>
				      <div class="preview-object">
				          <div class="preview-object-avatar" style="background: url(
				          https://pp.vk.me/c628621/v628621124/b7f9/xy-bLm3tTfo.jpg
				          ) no-repeat; background-size: cover;">
				          </div>
				          <div class="preview-object-info">
				            <div class="object-text">
				              <div class="object-maintext"><a href="/users/516">Солдатенко Наталья Анатольевна</a></div>
				              <div class="object-subtext">География</div>
				            </div>
				          </div>
				      </div>
				      <div class="clearboth">
				      </div>
			    	</div>
			    	<div class = 'follower-button'>
			    		<a class="btn btn-st btn-reject-follow btn-primary" data-toggle="tooltip" data-placement="bottom">Не читать</a>
			    	</div>
				  </div>
				  <div class="clearboth">
				  </div>
  			</div>

  			<div class = 'follower background-follower'>
  				<div class="follower-user-button">
  					<div class='follower-user'>
				      <div class="preview-object">
