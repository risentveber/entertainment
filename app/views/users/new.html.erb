<div id = 'main-line' class = 'container'>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-xs-4
    col-lg-offset-4 col-md-offset-4 col-xs-offset-4 text-on-page">
    <h1>Новый пользователь</h1>
    <%= simple_form_for(@user, url: users_path, html: { class: 'form-vertical' }) do |f| %>
      <%= f.input :name, label: 'Имя' %>
      <%= f.input :email, label: 'Почта' %>
      <%= f.input :password, label: 'Пароль' %>
      <%= f.input :password_confirmation, label: 'Подтверждение пароля' %>
      <%= f.button :submit, button_name(@user) %>
    <% end %>
    </div>
  </div>
</div>
