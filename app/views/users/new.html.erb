<div class = 'form-create-new-object animated zoomIn'>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    <h1>Регистрация</h1>
    <p>У Вас уже есть профиль на Студпаде?
      <%= link_to "Войдите!", welcome_path %>
    </p>

    <%= simple_form_for(@user, url: users_path, html: { class: 'form-vertical' }) do |f| %>
      <div class = 'row'>
        <div class="wrap-radio align-c col-xs-4">
          <%= f.radio_button :type, "Teacher", class: 'input-radio-sp', required: true %>
          <label for = 'user_type_teacher'>Преподаватель</label>
        </div>
        <div class="wrap-radio align-c col-xs-4">
          <%= f.radio_button :type, "Student", class: 'input-radio-sp', required: true %>
          <label for = 'user_type_student'>Ученик</label>
        </div>
      </div>
      <div class = 'row'>
        <div class = 'col-xs-12'>
          <div id='teacher_category' class = 'choose-category-specialization'>
            <p>Выберите категорию</p>
            <%= f.association :teacher_category, label: false %>
          </div>
          <div id='teacher_specialization' class = 'choose-category-specialization'>
            <p>Выберите специализацию</p>
            <%= f.association :teacher_specialization, label: false %>
          </div>
        </div>
      </div>
      <%= f.input :name, label: false, input_html: { class: 'input-sp', placeholder: 'ФИО' } %>
      <%= f.input :email, label: false, input_html: { class: 'input-sp',  placeholder: 'Электронный адрес' } %>
      <%= f.input :password, label: false, input_html: { class: 'input-sp',  placeholder: 'Пароль' } %>
      <%= f.input :password_confirmation, label: false,  input_html: { class: 'input-sp',  placeholder: 'Повторите пароль' } %>
      <div class = 'reg-licence'>
        <%= f.input :terms_of_service, as: :boolean,
          label: "Я принимаю #{link_to 'правила сайта', terms_path}  и #{link_to 'лицензионное соглашение', licence_path}.".html_safe %>
      </div>
      <%= f.button :submit, button_name(@user), class: 'btn-st btn-primary' %>
    <% end %>
    </div>
  </div>
</div>
