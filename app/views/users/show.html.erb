	</div> -->

  <div class = 'left-branch'>
    <%= render "/partials/profile" %>
  </div>



  <!--<div class = 'profile-sidebar'>
    <div class = 'position-profile-sidebar'>
      <div class = 'element-of-profile-sidebar'>
        Публикации
        <div>
          <span><%#= @user.posts.count %></span>
